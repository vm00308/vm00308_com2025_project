<div class = "text-center recipe-title font-italic"> <h1 class="display-3"> Listing all Recipes </h1> </div>

<div class = "recipes-list">
    <% @all_recipes.each do |recipe| %>
        <div class = "row">
            <div class = "col-md-8">
                <div class = "well well-lg">
                    <div class = "recipe-list-title">
                        <%= link_to recipe.name, recipe_path(recipe) %>
                    </div>
                    <div class = "recipe-list-body">
                        <%= truncate(recipe.description, length: 75) %>
                        <div class = "recipe-list-meta">
                            <small> Created by: <%= recipe.user.username if recipe.user %>, <%= time_ago_in_words(recipe.created_at) %> ago | last updated: <%= time_ago_in_words(recipe.updated_at) %> ago </small>
                        </div>
                    </div>
                    <div class = "recipe-list-actions">
                        <%= link_to "Show this recipe", recipe_path(recipe), class: "btn btn-dark btn-md" %>
                        <%= link_to "Edit this recipe", edit_recipe_path(recipe), class: "btn btn-primary btn-md" %>
                        <%= link_to 'Delete this recipe', recipe_path(recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: "btn btn-danger btn-md" %>
                    </div>
                </div>
            </div>
        </div>   <br> <br>
    <% end %>
</div>