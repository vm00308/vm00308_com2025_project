<% if @recipe.errors.any? %>
<h2> The following errors prevented the recipe from being created! </h2>
    <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>






<div class = "container-fluid row">
    <div class = "col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |r| %>
            <div class = "form-group">
                <div class = "control-label col-md-2"> <%= r.label :name %> </div>
                <div class = "col-md-10"> <%= r.text_field :name, class: "form-control", placeholder: "Recipe Name", autofocus: true %> </div>
            </div>
            <div class = "form-group">
                <div class = "control-label col-md-2"> <%= r.label :description %> </div>
                <div class = "col-md-10"> <%= r.text_area :description, rows: 10,  class: "form-control", placeholder: "Recipe Description" %> </div>
            </div>
            <div class = "form-group">
                <div class = "col-md-10"> <%= r.submit class: 'btn btn-outline-primary btn-lg' %> </div>
            </div>
        <% end %>
    </div>
</div>





<div class = "text-center"> | <%= link_to "Cancel and return to recipes list", recipes_path %> | </div>