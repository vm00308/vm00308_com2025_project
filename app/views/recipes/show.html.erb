<div class = "text-center recipe-title font-italic"> <h1 class="display-4"> Name: <%= @recipe.name %> </h1> </div>


<div class = "container-fluid">
    <ul class = "list-unstyled text-center">
        <h3> <li>By:</li> </h3>
        <br>
        <%= link_to gravatar_for(@recipe.user), user_path(@recipe.user) %>
        <h3> <li class = "recipe-title"> <%= link_to @recipe.user.username, user_path(@recipe.user) %> </li> </h3> 
        
    </ul>
    <h2 class = "text-center"><strong> Description</strong></h2>
    <br>
    <div class = "text-center">
        <div class = "description-wrap"> <%= simple_format(@recipe.description) %> </div>
        <br> <br> <br>
        <div>
            <%= link_to "Back to Recipe List", recipes_path, class: "btn btn-dark btn-md" %>
            <% if logged_in? && (current_user == @recipe.user) %>
                <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-primary btn-md" %>
                <%= link_to 'Delete this recipe', recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, class: "btn btn-danger btn-md" %>
            <% end %>
    </div>
</div>