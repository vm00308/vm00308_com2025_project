<div class = "error-padding-custom">
    <% if obj.errors.any? %>
        <div class = "row mx-auto card text-white bg-danger text-center container">
            <ul class = "card-header">
                <h2 class = "card-title">
                    <%= pluralize(obj.errors.count, "error") %> prohibited this recipe from being saved:
                </h2>
            <div class = "card-body">
                <ul class = "list-unstyled">
                    <% obj.errors.full_messages.each do |msg| %>
                        <li> -> <%= msg %> </li> 
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
</div>

<%# Shows error messages when any forms have issues with them %>