<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #FFA67A;">
  <%= link_to "RecipeList", root_path, class: "navbar-brand", id: "navbar_logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

        <li class="nav-item"> <%= link_to t('navbar.list_recipes'), recipes_path, class: "nav-custom-link" %> </li>
        <li class="nav-item pl-2"> <%= link_to t('navbar.list_users'), users_path, class: "nav-custom-link" %> </li>
        <li class="nav-item pl-2"> <%= link_to t('navbar.list_categories'), categories_path, class: "nav-custom-link" %> </li>
        <% if logged_in? %>
            <% if current_user.admin? %>
                <li class="nav-item pl-2"> <%= link_to t('navbar.new_category'), new_category_path, class: "nav-custom-link" %> </li>
            <% end %>
            <li class="nav-item pl-2"> <%= link_to t('navbar.new_recipe'), new_recipe_path, class: "nav-custom-link" %> </li>
            <li class="nav-item pl-2"> <%= link_to t('navbar.view_profile'), user_path(current_user), class: "nav-custom-link" %> </li>
            <li class="nav-item pl-2"> <%= link_to t('navbar.edit_profile'), edit_user_path(current_user), class: "nav-custom-link" %> </li>
            <li class="nav-item pl-2"> <%= link_to t('navbar.logout'), logout_path, class: "nav-custom-link", method: :delete %> </li>
        <% else %>
            <li class="nav-item pl-2"> <%= link_to t('navbar.login'), login_path, class: "nav-custom-link" %> </li>
            <li class="nav-item pl-2"> <%= link_to t('navbar.signup'), signup_path, class: "nav-custom-link" %> </li>
        <% end %> 

    </ul>
  </div>
</nav>



