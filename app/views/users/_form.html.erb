<%= render 'shared/error_messages', obj: @user %>
<br>
<div class = "container-fluid row">
    <div class = "col-md-12">
        <%= form_for(@user, :html => {role: "form"}) do |u| %>
            <div class = "form-group">
                <div class = "control-label col-md-2"> <%= u.label :username %> </div>
                <div class = "col-md-10"> <%= u.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %> </div>
            </div>
            <div class = "form-group">
                <div class = "control-label col-md-2"> <%= u.label :email %> </div>
                <div class = "col-md-10"> <%= u.email_field :email, class: "form-control", placeholder: "Enter email" %> </div>
            </div>
            <div class = "form-group">
                <div class = "control-label col-md-2"> <%= u.label :password %> </div>
                <div class = "col-md-10"> <%= u.password_field :password, class: "form-control", placeholder: "Enter password" %> </div>
            </div>
            <div class = "form-group">
                <div class = "col-md-10"> <%= u.submit(@user.new_record? ? "Sign Up!" : "Update your account!", class: 'btn btn-outline-primary btn-lg') %> </div>
            </div>
        <% end %>
    </div>
</div>

<div class = "text-center form-cancel-custom"> <h4> |  <%= link_to "Cancel and return to recipes list", recipes_path %> | </h4> </div>