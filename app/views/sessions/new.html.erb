<div class="container-fluid text-center"> <h1 class="display-3"> <%= t('sessions.new.title') %> </h1> </div>
<br> <br> <br>
<%= form_for(:session, :html => {role: "form"}, url: login_path) do |s| %>
    <div class = "form-group">
        <div class = "control-label col-md-2">
            <%= s.label :email %>
        </div>
        <div class = "col-md-10">
            <%= s.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
        </div>
    </div>
    <div class = "form-group">
        <div class = "control-label col-md-2">
            <%= s.label :password %>
        </div>
        <div class = "col-md-10">
            <%= s.password_field :password, class: "form-control", placeholder: "Enter Password", autocomplete: "off" %>
        </div>
    </div>
    <div class = "form-group">
        <div class = "col-md-10">
            <%= s.submit "Log In!", class: 'btn btn-outline-primary btn-lg' %>
        </div>
    </div>
<% end %>

